<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="kayson" type="Kayson.Configuration.KaysonSettings, Kayjax" allowDefinition="Everywhere" allowLocation="true" />
  </configSections>
  <system.web>
    <compilation debug="true">
      <assemblies>
        <add assembly="System.Core, Version=3.5.0.0, Culture=neutral, PublicKeyToken=B77A5C561934E089"/>
        <add assembly="System.Xml.Linq, Version=3.5.0.0, Culture=neutral, PublicKeyToken=B77A5C561934E089"/>
        <add assembly="System.Data.Linq, Version=3.5.0.0, Culture=neutral, PublicKeyToken=B77A5C561934E089"/>
      </assemblies>
    </compilation>
    <httpHandlers>
      <add path="helloworld.ashx" type="AjaxTest.HelloWorld, App_Code" verb="*" />
      <add path="kayson.ashx" type="Kayson.KaysonHandler, Kayjax" verb="*" />
    </httpHandlers>
    <httpModules>
      <add name="KaysonRouter" type="Kayson.KaysonRouteModule, Kayjax" />
    </httpModules>
  </system.web>
  <kayson handlerUrl="~/kayson.ashx">
    <routes>
      <add pattern="^~/ajax/(.*).ashx" routesTo="AjaxTest.$1, App_Code" />
    </routes>
  </kayson>
  <system.codedom>
    <compilers>
      <compiler language="c#;cs;csharp" extension=".cs" warningLevel="4" type="Microsoft.CSharp.CSharpCodeProvider, System, Version=2.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089">
        <providerOption name="CompilerVersion" value="v3.5"/>
        <providerOption name="WarnAsError" value="false"/>
      </compiler>
    </compilers>
  </system.codedom>
  <system.webServer>
    <validation validateIntegratedModeConfiguration="false"/>
    <modules runAllManagedModulesForAllRequests="true">
      <add name="KaysonRouter" type="Kayson.Modules.KaysonRouteModule, Kayjax" /> 
    </modules>
    <handlers>
      <add preCondition="integratedMode" path="kayson.ashx" type="Kayson.KaysonHandler, Kayjax" verb="*" />
    </handlers>
  </system.webServer>
</configuration>