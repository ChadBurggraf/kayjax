<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="kayson" type="Kayson.Configuration.KaysonSettings, Kayson" allowDefinition="Everywhere" allowLocation="true" />
  </configSections>
  <system.web>
    <httpHandlers>
      <add path="kayson.ashx" type="Kayson.Handlers.KaysonHandler, Kayson" verb="*" />
    </httpHandlers>
    <httpModules>
      <add name="KaysonRouter" type="Kayson.Modules.RouteModule, Kayson" />
    </httpModules>
  </system.web>
  <kayson handlerUrl="~/kayson.ashx">
    <routes>
      <add pattern="^~/categories/(.*).aspx" routesTo="Kayson.TestRoutes.Categories.$1, App_Code" />
      <add pattern="^~/products/(.*).aspx" routesTo="Kayson.TestRoutes.Products.$1, App_Code" />
    </routes>
  </kayson>
</configuration>